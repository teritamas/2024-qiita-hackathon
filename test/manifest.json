{
  "manifest_version": 3,
  "name": "Sample Project",
  "version": "1.0",
  "description": "動作確認用です",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title": "actionタイトルです",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/*"],
      "js": ["libs/jquery-3.7.1.min.js", "content.js"]
    }
  ],
  "permissions": [
    "http://127.0.0.1:8000",
    "https://happy-world-api-ez5q3zuvrq-uc.a.run.app"
  ]
}
