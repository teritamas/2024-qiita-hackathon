{
    "manifest_version": 3,
    "name": "ポジティブジェネレーター",
    "version": "1.0",
    "description": "Slack内のメッセージをポジティブな言葉に変換してくれる拡張機能です",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_icon": {
        "16": "icon.png",
        "24": "icon.png",
        "32": "icon.png"
      },
      "default_title": "actionタイトルです",
      "default_popup": "popup.html"
   },
   "permissions": [
    "tabs"
  ],
   "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "js": ["content.js"]
     }
   ]
  }